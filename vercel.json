{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    { "src": "api/index.js", "use": "@vercel/node" },
    { "src": "api/uploads.js", "use": "@vercel/node" },
    { "src": "api/[...all].js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/[...all].js" },
    { "src": "/uploads/(.*)", "dest": "/api/uploads.js" }
  ]
}